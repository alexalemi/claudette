#!/bin/bash
# Save as: ~/bin/claude-ask
# Usage: claude-ask "Your question here"

PROMPT="$*"

if [ -z "$PROMPT" ]; then
    # If no argument, prompt for input
    PROMPT=$(zenity --entry --title="Ask Claude" --text="Enter your question:" --width=400 2>/dev/null)
    [ -z "$PROMPT" ] && exit 0
fi

# Open Claude in default browser
xdg-open "https://claude.ai/new" &

# Wait for the page to load and focus the input
sleep 3

# Type the prompt and submit
xdotool type --delay 12 "$PROMPT"
sleep 0.2
xdotool key Return

